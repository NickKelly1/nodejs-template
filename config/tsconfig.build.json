{
  "extends": "../tsconfig.json",
  "exclude": [
    "../*.spec.ts",
    "../*.test.ts",

    "../**/*.spec.ts",
    "../**/*.test.ts",

    "../*.spec.util.ts",
    "../*.test.util.ts",
    "../**/*.spec.util.ts",
    "../**/*.test.util.ts",

    "../*.util.spec.ts",
    "../*.util.test.ts",
    "../**/*.util.spec.ts",
    "../**/*.util.test.ts",

    "../___tests___",
    "../dist/*",
  ],
  "include": [
    "../src/*",
    "../src/**/*",
  ],
  "compilerOptions": {
    "outDir": "../dist",                              /* Redirect output structure to the directory. */
    "rootDir": "../src",                             /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */
  }
}
